server {
    listen 80;
    server_name neurochief.pro;

    # FastAPI DomosClub на 8001
    location / {
        proxy_pass http://127.0.0.1:8001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    # Django DomosClub на 8002
    # STATIC
    location ^~ /domosclub/static/ {
        alias /home/neurochief/DomosClub/web/static/;
    }

    # MEDIA (если они есть, путь уточни)
    location ^~ /domosclub/media/ {
        alias /home/neurochief/DomosClub/web/media/;
    }

    # Django backend
    location /domosclub/ {
        proxy_pass http://127.0.0.1:8002/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # тестовая среда для домоса
    # FastAPI DomosClub на 8003
    location /domosclub-test/api-test/ {
        proxy_pass http://127.0.0.1:8003;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }


    # Django DomosClub на 8004
    # STATIC
    location ^~ /domosclub-test/static/ {
        alias /home/neurochief/DomosClub/web/static/;
    }

    # MEDIA (если они есть, путь уточни)
    location ^~ /domosclub-test/media/ {
        alias /home/neurochief/DomosClub/web/media/;
    }

    # Django backend
    location /domosclub-test/ {
        proxy_pass http://127.0.0.1:8004/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }



    #FastAPI (BLC) на 8090 — сохраняем префикс /blcgroup
    location /blcgroup/ {
        proxy_pass http://127.0.0.1:8090;  # без завершающего /
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    location /xleb/ {
    	proxy_pass http://127.0.0.1:7898;
    	proxy_set_header Host $host;
    	proxy_set_header X-Real-IP $remote_addr;
    	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    	proxy_set_header X-Forwarded-Proto $scheme;
    }

    # FastAPI (numerolog) на 8040 — сохраняем префикс /katya
    location /numerolog/ {
        proxy_pass http://127.0.0.1:8040;  # без завершающего /
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

}

server {
    listen 80;
    server_name neurochief.shop;

    location / {
        proxy_pass http://127.0.0.1:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
